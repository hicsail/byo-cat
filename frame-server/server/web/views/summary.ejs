<div id="mainContent">
  <div class="hidden" id="type"><%= type %></div>
  <div class="hidden" id="currentUserId"><= userid ></div>
  <div class="hidden" id="data"></div>
  <br>
  <br>
  <h3 class="text-center minor-padding-bottom"><%= gettext("Score Summary for this Survey") %></h3>
  <p class="text-center minor-padding-bottom"><%= gettext("Survey Id: %s", createdSurveyId) %></p>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="table-responsive">
          <table class="table table-bordered table-hover">
            <thead>
            <tr>
              <th scope="col" id="table-header" class="table-title text-left"><%= gettext("Scale") %></th>
              <th scope="col" id="table-header" class="table-title text-left"><%= gettext("Score (SE)") %><sup>*</sup></th>
            </tr>
            </thead>
            <tbody>
            <% for(var i = 0; i < score.length; i++) { %>
            <tr>
              <td scope="row" class="table-data text-left"><%= score[i].section %></td>
              <td scope="row" class="table-data text-left"><%= score[i].currentScore %> (<%= score[i].stdErr %>)</td>
            </tr>
            <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!--<div class="row-fluid">-->
    <!--<div class="span12 text-center minor-padding-top">-->
      <!--<p class="mediumfont minor-padding-bottom"> *Using T score(SE) (Mean=50, SD=10 scale)</p>-->
      <!--<a id="view-all-btn" href=<%= viewChartUrl %>>View all</a>-->
      <!--<button class="btn btn-primary" id="save-scores" data-toggle="modal" data-target="#downloadModal">Preview Scores</button>-->
    <!--</div>-->
  <!--</div>-->
</div>

<div class="modal modal-fullscreen fade" id="downloadModal" tabindex="-1" role="dialog" aria-labelledby="downloadModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="downloadModalLabel"><%= gettext("Survey Scores Preview") %></h4>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= gettext("Close") %></button>
        <button type="button" class="btn btn-primary" id="downloadPDF"><%= gettext("Download PDF") %></button>
        <button type="button" class="btn btn-primary" data-export="export" id="downloadCSV"><%= gettext("Download CSV") %></button>
      </div>
    </div>
  </div>
</div>

<script>
  $(".modal-fullscreen").on('show.bs.modal', function () {
    setTimeout( function() {
      $(".modal-backdrop").addClass("modal-backdrop-fullscreen");
    }, 0);
  });
  $(".modal-fullscreen").on('hidden.bs.modal', function () {
    $(".modal-backdrop").addClass("modal-backdrop-fullscreen");
  });

  initializeScorePreviewTable();
</script>
